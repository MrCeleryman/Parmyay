{
	"extends": "google",
	"plugins": [
		"html"
	],
	"parser": "typescript-eslint-parser",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"comma-dangle": [
			"error",
			"never"
		],
		"no-empty-label": "off",
		"keyword-spacing": "error",
		"no-unused-vars": "off",
		"arrow-body-style": [
			"error", 
			"as-needed", { 
				"requireReturnForObjectLiteral": true 
			}
		],
		"arrow-parens": [
			"error", 
			"as-needed"
		],
		"linebreak-style": "off",
		"quotes": [
			"error",
			"double",
			{
				"allowTemplateLiterals": true
			}
		],
		"require-jsdoc": "off",
		"max-len": [
			"error",
			120,
			{
				"ignoreComments": true
			}
		],
		"guard-for-in": "off",
		"object-curly-spacing": [
			"error",
			"always"
		]
	}
}